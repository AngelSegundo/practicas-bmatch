{
  "extends": "tsconfig/api.json",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "./dist/**/*"],
  "compilerOptions": {
    "typeRoots": ["@types", "./node_modules/@types"],
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "target": "ES2017"
  }
}
